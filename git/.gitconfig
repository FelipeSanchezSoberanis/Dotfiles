[init]
	defaultBranch = main
[user]
	email = felipesaso2000@gmail.com
	name = Felipe SÃ¡nchez Soberanis
[log]
	decorate = auto
[core]
	editor = nvim
    pager = delta
[credential]
	helper = store
[commit]
	template = /home/felipe/.gitmessage
[remote "origin"]
	prune = true
[status]
	showUntrackedFiles = all
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

